{% extends 'base.html.twig' %}

{% block title %}Langues Disponibles{% endblock %}

{% block body %}
    <div style="max-width: 600px; margin: 20px auto; padding: 15px; background-color: #f9f9f9; border-radius: 8px;">
        <h1 style="text-align: center; color: #007BFF; margin-bottom: 15px;">Langues Disponibles</h1>
        <ul style="list-style-type: none; padding: 0;">
            {% for langue in langues %}
                <li style="margin: 8px 0; padding: 8px; background-color: white; border-radius: 5px; font-size: 1.1rem; color: #333;">
                    <strong style="color: #007BFF;">{{ langue.nom }}</strong> ({{ langue.code }})
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
